<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.i18n.reload" value="true" />
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.configuration.xml.reload" value="true" />
    <constant name="struts.custom.i18n.resources" value="global" />
<!-- 	<constant name="struts.action.extension" value=""/> -->

    <package name="welcome" namespace="/" extends="struts-default">
        <default-action-ref name="index" />        
        <action name="index">
            <result>/WEB-INF/views/index.jsp</result>
        </action>

    </package>
    
    <package name="eire" namespace="/eire" extends="struts-default"> 
        <default-action-ref name="index" />
        <action name="index">
            <result>/WEB-INF/views/eire/index.jsp</result>
        </action>
        <action name="infos">
            <result>/WEB-INF/views/eire/infos.jsp</result>
        </action>
        <action name="travels" class="fr.obodrel.travel.actions.EireTravelsAction">
            <result>/WEB-INF/views/eire/travels.jsp</result>
        </action>
    </package>
    
    <package name="united-kingdom" namespace="/united-kingdom" extends="struts-default"> 
    </package>
    <package name="england" namespace="/united-kingdom/england" extends="united-kingdom"> 
        <default-action-ref name="index" />
        <action name="index" class="fr.obodrel.travel.actions.EnglandTravelsAction">
            <result>/WEB-INF/views/united-kingdom/england/index.jsp</result>
        </action>
        <action name="register" class="fr.obodrel.travel.actions.EnglandRegisterAction">
            <result name="input">/WEB-INF/views/united-kingdom/england/register.jsp</result>
            <result name="success">/WEB-INF/views/united-kingdom/england/register.jsp</result>
        </action>
    </package>
    
    
    <package name="spain" namespace="/spain" extends="struts-default"> 
        <default-action-ref name="list" />
        <action name="proposal" class="fr.obodrel.travel.actions.SpainProposalAction">
            <result>/WEB-INF/views/spain/proposal.jsp</result>
        </action>
        <action name="byId" class="fr.obodrel.travel.actions.SpainByIdAction">
            <result>/WEB-INF/views/spain/byId.jsp</result>
        </action>
        <action name="list" class="fr.obodrel.travel.actions.SpainListAction">
            <result>/WEB-INF/views/spain/list.jsp</result>
        </action>
    </package>
    
    <package name="italy" namespace="/italy" extends="struts-default"> 
        <default-action-ref name="index" />
        <action name="index" class="fr.obodrel.travel.actions.ItalyIndexAction">
            <result>/WEB-INF/views/italy/index.jsp</result>
        </action>
    </package>

    <package name="croatia" namespace="/croatia" extends="struts-default"> 
        <default-action-ref name="index" />
        <action name="index" class="fr.obodrel.travel.actions.CroatiaIndexAction">
            <result>/WEB-INF/views/croatia/index.jsp</result>
        </action>
    </package>

</struts>

