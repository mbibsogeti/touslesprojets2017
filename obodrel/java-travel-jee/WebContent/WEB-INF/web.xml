<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<servlet>
		<servlet-name>Quito</servlet-name>
		<servlet-class>fr.obodrel.travel.QuitoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Quito</servlet-name>
		<url-pattern>/equator/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Cartagena</servlet-name>
		<servlet-class>fr.obodrel.travel.CartagenaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Cartagena</servlet-name>
		<url-pattern>/colombia/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Maracaibo</servlet-name>
		<servlet-class>fr.obodrel.travel.MaracaiboServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Maracaibo</servlet-name>
		<url-pattern>/venezuela/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Lima</servlet-name>
		<servlet-class>fr.obodrel.travel.LimaServlet</servlet-class>
		<init-param>
			<param-name>displayedTxt</param-name>
			<param-value>We are sorry but we are unable to provide any travel to Lima for now.</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Lima</servlet-name>
		<url-pattern>/peru/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Santiago</servlet-name>
		<servlet-class>fr.obodrel.travel.SantiagoServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Santiago</servlet-name>
		<url-pattern>/chile/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Montevideo</servlet-name>
		<servlet-class>fr.obodrel.travel.MontevideoServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Montevideo</servlet-name>
		<url-pattern>/montevideo</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>SetCharacterEncoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>SetCharacterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


