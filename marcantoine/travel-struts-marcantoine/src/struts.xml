<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<!-- START SNIPPET: xworkSample -->
<struts>

	<!-- Some or all of these can be flipped to true for debugging -->
	<!-- Ces constantes sont par défaut en mode performance (ou production). 
		On passe en mode développement en inversant leurs valeurs pour avoir -->
	<constant name="struts.i18n.reload" value="true" />
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<!-- assiste le développeur : -->
	<constant name="struts.devMode" value="true" />
	<!-- lorsqu'on change les choses, prises en cpte immédiatemt ou non : -->
	<constant name="struts.configuration.xml.reload" value="true" />
	<!-- constante pour utiliser les balises <s:text/> avec les fichiers "properties" -->
	<constant name="struts.custom.i18n.resources" value="global" />

	<!-- namespace : comment on accède à ce package. pour l'adresse .../index, 
		"/" est le namespace du package (pourrait être plus compliqué) et "index" 
		est le nom de l'action -->
	<package name="welcome" namespace="/" extends="struts-default">
		<!-- action-default-ref se met avant ou après les actions. permet de tomber 
			sur cette page par défaut avec "/" -->
		<default-action-ref name="index">/WEB-INF/views/index.jsp</default-action-ref>
		<action name="index">
			<!-- le result donne le chemin dans notre projet, l'action renvoie cette 
				page -->
			<result>/WEB-INF/views/index.jsp</result>
		</action>
	</package>

	<package name="ireland" namespace="/ireland" extends="struts-default">
		<default-action-ref name="index">/WEB-INF/views/ireland/index.jsp</default-action-ref>
		<action name="index">
			<result>/WEB-INF/views/ireland/index.jsp</result>
		</action>
		<action name="info">
			<result>/WEB-INF/views/ireland/info.jsp</result>
		</action>
		<action name="travels" class="ireland.TravelsAction">
			<result>/WEB-INF/views/ireland/travels.jsp</result>
		</action>
	</package>

	<package name="england" namespace="/england" extends="struts-default">
		<default-action-ref name="index">/WEB-INF/views/england/index.jsp</default-action-ref>
		<action name="index" class="england.IndexAction">
			<result>/WEB-INF/views/england/index.jsp</result>
		</action>
		<action name="registration" class="england.RegistrationAction">
			<result>/WEB-INF/views/england/registration.jsp</result>
		</action>
		<action name="send" class="england.SendAction">
			<!-- la classe action SendAction renvoie la jsp sent.jsp -->
			<result name="success">/WEB-INF/views/england/sent.jsp</result>
			<!-- on peut avoir plusieurs "results" -->
			<!-- intérêt par rapport au "required" dans la balise : le "required" est du JS,
			or certains users n'utilisent pas JS !! Passeront outre la page -->
			<result name="input">/WEB-INF/views/england/registration.jsp</result>
		</action>
	</package>

</struts>

<!-- END SNIPPET: xworkSample -->