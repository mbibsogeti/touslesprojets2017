<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
	xmlns:p="tapestry:parameter" t:type="layout" title="message:title">
	<section class="row" style="padding:15px">
		<t:eventlink t:event="changeLocale" t:context="'it'"
			class="btn btn-warning">Italiano
		</t:eventlink>
		<t:eventlink t:event="changeLocale" t:context="'en'"
			class="btn btn-warning">English
		</t:eventlink>
		<t:eventlink t:event="changeLocale" t:context="'fr'"
			class="btn btn-primary">Fran√ßais
		</t:eventlink>
	</section>
	<h1>${message:title}</h1>
	<section class="row" style="padding:15px">
		<section class="col-xs-6">
			<img src="${context:img/china.jpg}" class="img-circle" />
		</section>
		<section class="col-xs-6 form-group">
			<h2>Some details about this destination...</h2>
			<p>Blablablablablablablablablablablablablablablabla
				blablablablablablablablablablablablablablablablabla
				blablablablablablablablablablablablablablablablabla
				blablablablablablablablablablablablablablablablabla
				blablablablablablablablablablablablablablablablabla
				blablablablablablablablablablablablablablablablabla
				blablablablablablablablablablablablablablablablabla
				blablablablablablablablablablablablablablablablabla
				blablablablablablablablablablablablablablablablabla
				blablablablablablablablablablablablablablablablabla
			</p>
		</section>
	</section>
	<section class="row">
		<section class="col-xs-6">
			<h2>Your trip:</h2>
			<t:form>
				<t:textfield t:id="name" t:mixins="formgroup" t:label="Name:"
					validate="required,minLength=2" />
				<label for="tel">Tel:</label>
				<t:textfield t:id="tel"
					validate="required,minLength=10,regexp=^[0-9]+$" />
				<t:textfield t:type="number" t:id="travelers" t:mixins="formgroup"
					t:label="Number of travelers:" min="2" />
				<t:upload t:id="visa" t:mixins="formgroup" t:label="Upload your visa:" />
				<t:submit class="btn btn-primary" value="Send form" />
				<t:errors />
			</t:form>
		</section>
		<section class="col-xs-6">
		</section>
	</section>
</html>