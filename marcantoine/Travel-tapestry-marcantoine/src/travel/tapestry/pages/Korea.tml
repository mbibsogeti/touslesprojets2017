<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
	xmlns:p="tapestry:parameter" t:type="layout" title="message:title">
	<div class="row" style="padding:15px">
		<t:eventlink t:event="changeLocale" t:context="'it'"
			class="btn btn-primary">Italiano
		</t:eventlink>
		<t:eventlink t:event="changeLocale" t:context="'en'"
			class="btn btn-primary">English
		</t:eventlink>
		<t:eventlink t:event="changeLocale" t:context="'fr'"
			class="btn btn-primary">Fran√ßais
		</t:eventlink>
	</div>
	<h1>${message:title}</h1>
	<section class="row" style="padding:15px">
		<section class="col-xs-6">
			<img src="${context:img/korea.jpg}" class="img-circle" />
		</section>
		<section class="col-xs-6 form-group">
			<h2>Some details about this destination...</h2>
			<p>
				<t:actionlink zone="textZone" context="0">The country</t:actionlink>
			</p>
			<p>
				<t:actionlink zone="textZone" context="1">Touristic sites</t:actionlink>
			</p>
			<p>
				<t:actionlink zone="textZone" context="2">Your trip</t:actionlink>
			</p>
			<t:zone t:id="textZone">
				<p>${text}</p>
			</t:zone>
		</section>
	</section>
	<p t:type="footer"></p>
</html>