<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>My Tapestry Application</display-name>
	<!-- *********** La création de différents paramètres permet de configurer 
		Tapestry ************* -->
	<!-- La valeur de ce paramètre "tapestry.app-package" doit être fixée de façon obligatoire. Elle 
		dépend d'un projet à l'autre et permet à Tapestry de fouiller dans les classes 
		du projet associées à ce package. S'il y a d'autres classes non liées à Tapestry 
		situées dans un autre package, ce dernier n'ira pas les voir -->
	<context-param>
		<param-name>tapestry.app-package</param-name>
		<param-value>travel.tapestry</param-value>
	</context-param>
	<!-- Ce paramètre "tapestry.production-mode" doit être créé et fixé à false pour être en mode développement. 
		On oublie souvent de remettre ce paramètre en true une fois en prod ! -->
	<context-param>
		<param-name>tapestry.production-mode</param-name>
		<param-value>false</param-value>
	</context-param>
	<!-- Ce paramètre "tapestry.compress-whitespace" permet d'éviter de minimiser le code (ce que fait Tapestry 
		par défaut) -->
	<context-param>
		<param-name>tapestry.compress-whitespace</param-name>
		<param-value>false</param-value>
	</context-param>
	<!-- Ce param "tapestry.application-version" sert à changer la version de l'application. Forcera TOUS les 
		navigateurs à actualiser automatiquement la version de l'application web. 
		ATTENTION, ce paramètre sera à changer manuellement à chaque nouvelle version 
		du site !! -->
	<context-param>
		<param-name>tapestry.application-version</param-name>
		<param-value>1</param-value>
	</context-param>
	<filter>
		<filter-name>app</filter-name>
		<filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>app</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>