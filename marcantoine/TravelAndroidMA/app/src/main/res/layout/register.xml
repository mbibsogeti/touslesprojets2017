<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:textSize="40sp"
    android:padding="20sp">
    <TextView
        android:id="@+id/etRegTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_name"
        android:textSize="30sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reg_name"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:background="#63ffffff"/>

    <TextView
        android:id="@+id/tvTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reg_tel"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/etTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:background="#63ffffff"/>

    <TextView
        android:id="@+id/tvPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reg_place"
        android:textSize="25sp"/>

    <AutoCompleteTextView
        android:id="@+id/actvPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:background="#63ffffff"/>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reg_info"
        android:textSize="25sp"
        />

    <EditText
        android:id="@+id/etInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text=""
        android:background="#63ffffff"
        android:layout_weight="1"
        android:gravity="top"
        />

    <CheckBox
        android:id="@+id/cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reg_urgent"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/register_btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reg_send"
        android:onClick="register"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvFormSent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stub"
        android:textSize="25sp"/>
</LinearLayout>
