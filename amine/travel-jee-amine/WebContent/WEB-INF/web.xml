<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<servlet>
		<servlet-name>Quito</servlet-name>
		<servlet-class>fr.ib.travel.QuitoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Quito</servlet-name>
		<url-pattern>/quito</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Cartagena</servlet-name>
		<servlet-class>fr.ib.travel.CartagenaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Cartagena</servlet-name>
		<url-pattern>/cartagena</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Maracaïbo</servlet-name>
		<servlet-class>fr.ib.travel.MaracaiboServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Maracaïbo</servlet-name>
		<url-pattern>/maracaibo</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Lima</servlet-name>
		<servlet-class>fr.ib.travel.LimaServlet</servlet-class>
		<init-param>
			<param-name>text</param-name>
			<param-value>Pas de voyages actuellement</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>

	</servlet>
	<servlet-mapping>
		<servlet-name>Lima</servlet-name>
		<url-pattern>/lima</url-pattern>
	</servlet-mapping>
	<!-- Santiago de Chili -->
	<servlet>
		<servlet-name>Santiago</servlet-name>
		<servlet-class>fr.ib.travel.SantiagoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Santiago</servlet-name>
		<url-pattern>/santiago</url-pattern>
	</servlet-mapping>
	<!-- Montevideo -->
	<servlet>
		<servlet-name>Montevideo</servlet-name>
		<servlet-class>fr.ib.travel.MontevideoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Montevideo</servlet-name>
		<url-pattern>/montevideo</url-pattern>
	</servlet-mapping>
	<!-- George Town -->
	<servlet>
		<servlet-name>GeorgeTown</servlet-name>
		<servlet-class>fr.ib.travel.GeorgeTownServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GeorgeTown</servlet-name>
		<url-pattern>/georgetown</url-pattern>
	</servlet-mapping>
	<!-- configuration pour BD -->
	<resource-ref>
		<res-ref-name>jdbc/travelDS</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<!-- filtre il filtre les données envoyé du client vers le serveur donc 
		ne pas enlever les type d'encodage sur les autres fichiers -->
	<filter>
		<filter-name>SetCharacterEncoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>SetCharacterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- Traitement des erreurs -->
	<error-page>
		<erreur-code>404</erreur-code>
		<location>/erreur404.html</location>
	</error-page>


</web-app>