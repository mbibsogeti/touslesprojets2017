<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<!-- START SNIPPET: xworkSample -->
<struts>

	<!-- Some or all of these can be flipped to true for debugging -->
	<constant name="struts.i18n.reload" value="true" />
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.configuration.xml.reload" value="true" />
	<!-- pour l'internationalisation multi langue -->
	<constant name="struts.custom.i18n.resources" value="global" />


	<!-- Necessary for Showcase because default includes org.apache.struts2.* -->

	<package name="welcome" namespace="/" extends="struts-default">
		<default-action-ref name="index" />
		<action name="index">
			<result>/WEB-INF/views/index.jsp</result>
		</action>
	</package>


	<package name="irlande" namespace="/irlande" extends="struts-default">
		<default-action-ref name="index" />
		<action name="index">
			<result>/WEB-INF/views/irlande/index.jsp</result>
		</action>
		<action name="info">
			<result>/WEB-INF/views/irlande/info.jsp</result>
		</action>
		<action name="travels" class="fr.ib.travel.irlande.TravelsAction">
			<result>/WEB-INF/views/irlande/travels.jsp</result>
		</action>
	</package>
	<!-- voyage england -->
	<package name="england" namespace="/england" extends="struts-default">
		<default-action-ref name="index" />
		<action name="index" class="fr.ib.travel.england.EnglandAction">
			<result>/WEB-INF/views/england/index.jsp</result>
		</action>
		<action name="registration" class="fr.ib.travel.england.SendAction">
			<result>/WEB-INF/views/england/registration.jsp</result>
		</action>
		<action name="send" class="fr.ib.travel.england.SendAction">
			<result name="success">/WEB-INF/views/england/sent.jsp</result>
			<result name="input">/WEB-INF/views/england/registration.jsp</result>
		</action>
	</package>
	<!-- voyage espagne -->
	<package name="spain" namespace="/spain" extends="struts-default">
		<action name="proposal" class="fr.ib.travel.spain.ProposalAction">
			<result>/WEB-INF/views/spain/proposal.jsp</result>
		</action>
		<action name="byid" class="fr.ib.travel.spain.ByIdAction">
			<result>/WEB-INF/views/spain/byid.jsp</result>
		</action>
	</package>
</struts>

<!-- END SNIPPET: xworkSample -->

