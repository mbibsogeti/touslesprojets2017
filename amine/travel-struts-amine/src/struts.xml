<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
	"http://struts.apache.org/dtds/struts-2.5.dtd">

<!-- START SNIPPET: xworkSample -->
<struts>

	<!-- Some or all of these can be flipped to true for debugging -->
	<constant name="struts.i18n.reload" value="true" />
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.configuration.xml.reload" value="true" />


	<!-- Necessary for Showcase because default includes org.apache.struts2.* -->

	<package name="welcome" namespace="/" extends="struts-default">
		<default-action-ref name="index" />
		<action name="index">
			<result>/WEB-INF/views/index.jsp</result>
		</action>
	</package>
	<package name="irlande" namespace="/irlande" extends="struts-default">
		<default-action-ref name="index" />
		<action name="index">
			<result>/WEB-INF/views/irlande/index.jsp</result>
		</action>
		<action name="info">
			<result>/WEB-INF/views/irlande/info.jsp</result>
		</action>
		<action name="travels" class="fr.ib.travel.irlande.TravelsAction">
			<result>/WEB-INF/views/irlande/travels.jsp</result>
		</action>
	</package>
</struts>

<!-- END SNIPPET: xworkSample -->

