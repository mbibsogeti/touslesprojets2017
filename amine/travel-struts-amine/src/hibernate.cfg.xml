<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory name="foo">
		<!-- création auto de la base de donnée( j'ai fais des mappings tu crée 
			les tables -->
		<!-- update rajoute et modifie la table à notre demande et validate: juste 
			validé create: tu recrée à chaque fois la base -->
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- le connecté à la base de donnée crée dans phpMyAdmin -->
		<property name="hibernate.connection.url">jdbc:mysql://localhost/travel</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<mapping class="fr.ib.travel.data.Monument" />
	</session-factory>
</hibernate-configuration>