<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="fr.ib.travelandroidbelto">
<!--le fichier à modifier, on cree une balise activity pour chaque classe activity crée-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".HomeActivity" android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name=".MapActivity" android:label="@string/map">
        </activity>
        <!--seconde activité-->
        <activity android:name=".SubmapsActivity"  android:label="@string/submaps">
        </activity>
        <activity android:name=".PlaneActivity" android:icon="@drawable/icone_plane"  android:label="@string/plane">
        </activity>
    </application>

</manifest>
