<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory name="foo">
<!-- configurer la connection, une propriété pour tout ce qu'on a besoin -->
		<property name="show_sql">true</property>
<!-- Le driver à utiliser -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
<!-- url de connection local, le port -->
		<property name="hibernate.connection.url">jdbc:mysql://localhost/travel</property>
<!-- le login utiliser -->
		<property name="hibernate.connection.username">root</property>
<!-- Le mot de passe -->
		<property name="hibernate.connection.password"></property>
<!-- Le dialect utilisé, quel langage utilisé (en fonction du type de serveur) -->
		<property name="hibernate.dialect">MySQL5InnoDBDialect</property>
		
		<mapping class="fr.belto.travel.hibernate.Monument"/>
		
	</session-factory>
</hibernate-configuration>