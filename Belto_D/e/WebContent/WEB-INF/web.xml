<!DOCTYPE web-app
      PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
      "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>My Tapestry Application</display-name>
    <context-param>
        <param-name>tapestry.app-package</param-name>
        <param-value>fr.belto.travel.tapestry</param-value><!-- il faut toujours le renseigner(au sens package java) -->
    </context-param>
    
    <context-param><!-- Nouvel option qu'on a ajouté -->
        <param-name>tapestry.production-mode</param-name><!-- La valeur de production-mode est un boolean, sinon à true par defaut donc sécurisé -->
        <param-value>false</param-value><!-- mode production, à false(plus rapide). Ne limite pas l'accès -->
    </context-param>
  
    <context-param><!-- Nouvel option qu'on a ajouté -->
        <param-name>tapestry.compress-whilespace</param-name><!-- peut servir au moment du debug -->
        <param-value>false</param-value><!-- ne pas compresser le fichier -->
    </context-param>
    
     <context-param><!-- Nouvel option qu'on a ajouté -->
        <param-name>tapestry.application-version</param-name><!-- peut servir au moment du debug, comportement lui permettant d'aller chercher les nouvelle version -->
        <param-value>1</param-value><!-- quand on publiera une nouvel version, on forcera le navigateur d'aller chercher la nouvel version, donc à chaque fois on viendra changer la version ici! -->
    </context-param>
    <filter>
        <filter-name>app</filter-name>
        <filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>app</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>