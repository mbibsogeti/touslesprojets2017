<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<!-- Configuration d'une session de travail sur une DB -->
	<session-factory>
		<!-- permet à hibernate de creer les tables avec les moyens de JDBC  -->
		<property name="hibernate.hbm2ddl.auto">update</property> 
		<property name="show_sql">true</property>
		<!-- Définition du driver SQL utiliser, soit JDBC -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- Localisation de la DB -->
		<property name="hibernate.connection.url">jdbc:mysql://localhost/travel</property>
		<!-- Etablissement des coordonnées de connection -->
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<!-- Définition du dialect de la DB à manipuler -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<!-- Connection d'une table à sa class de création -->
		<mapping class="spain.Monument"/>
	</session-factory>
</hibernate-configuration>