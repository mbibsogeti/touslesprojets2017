<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">

    <display-name>My Tapestry Application</display-name>
    	<!-- Détermine le package de travail de tapestry -->
    <context-param>
        <param-name>tapestry.app-package</param-name>
        <param-value>tapestry</param-value>
    </context-param>
    	<!-- Permet de passer tapestry en mode verbeux (débug) -->
    <context-param>
        <param-name>tapestry.production-mode</param-name>
        <param-value>false</param-value>
    </context-param>
    	<!-- Permet d'avoir un rendu non compressé (débug) -->
    <context-param>
        <param-name>tapestry.compress-whitespace</param-name>
        <param-value>false</param-value>
    </context-param>
    	<!-- Détermine la version du projet -->
    <context-param>
        <param-name>tapestry.application-version</param-name>
        <param-value>1</param-value>
    </context-param>
    <filter>
        <filter-name>app</filter-name>
        <filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>app</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
</web-app>