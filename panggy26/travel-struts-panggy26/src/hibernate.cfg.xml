<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<!-- Cet argument name est d'une inutilité notoire -->
	<session-factory name="foo">
		<!-- AJOUT : mise à jour des données de la table.
		Autres valeurs possibles : validate on ne fait que lire, create on supprime et on recréé -->
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>
		<!-- AJOUT : configuration du pilote -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- AJOUT : configuration de la connexion à la base de données -->
		<property name="hibernate.connection.url">jdbc:mysql://localhost/travel</property>
		<!-- AJOUT : login et mdp -->
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<!-- AJOUT : Dans Eclipse, aller voir dans Java Resources, Libraries, Web 
		App Libraries, dans le .jar hibernate-core, dans le package org.hibernate.dialect 
		pour trouver le nom de la classe qui correspond au langage SQL souhaité -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<!-- MODIF : passé en commentaires -->
		<!-- <mapping resource="org/hibernate/test/legacy/Simple.hbm.xml" /> -->
		<!-- AJOUT : chemin vers package.Classe -->
		<!-- On peut avoir autant de balise mapping que nécessaire -->
		<mapping class="jk.travel.data.Monument" />
		<mapping class="jk.travel.italie.ItalieComment" />
		<!-- BLOC PASSÉ EN COMMENTAIRES -->
		<!-- <class-cache -->
		<!-- class="org.hibernate.test.legacy.Simple" -->
		<!-- region="Simple" -->
		<!-- usage="read-write"/> -->
	</session-factory>
</hibernate-configuration>