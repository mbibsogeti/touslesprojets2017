<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>My Tapestry Application</display-name>
	<context-param>
		<!-- MODIF du nom de package. Avant : <param-name>tapestry.app-package</param-name> -->
		<param-name>tapestry.app-package</param-name>
		<param-value>jk.travel.tapestry</param-value>
	</context-param>
	<!-- AJOUT -->
	<context-param>
		<param-name>tapestry.production-mode</param-name>
		<!-- Mode non sécurisé, pour moins de lourdeur dans notre cas -->
		<param-value>false</param-value>
	</context-param>
	<!-- AJOUT -->
	<context-param>
		<param-name>tapestry.compress-whitespace</param-name>
		<!-- Pour ne pas libérer l'espace libre -->
		<param-value>false</param-value>
	</context-param>
	<!-- AJOUT -->
	<context-param>
		<param-name>tapestry.application-version</param-name>
		<!-- Force le raffraîchissment des ressources dans le navigateur -->
		<param-value>1</param-value>
	</context-param>
	<filter>
		<filter-name>app</filter-name>
		<filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>app</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>