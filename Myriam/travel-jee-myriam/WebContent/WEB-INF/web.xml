<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<servlet>
		<servlet-name>Quito</servlet-name>
		<servlet-class>fr.ib.travel.QuitoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Quito</servlet-name>
		<url-pattern>/equateur/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>cartagena</servlet-name>
		<servlet-class>fr.ib.travel.CartagenaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>cartagena</servlet-name>
		<url-pattern>/cartagena</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>maracaibo</servlet-name>
		<servlet-class>fr.ib.travel.MaracaiboServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>maracaibo</servlet-name>
		<url-pattern>/maracaibo</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>lima</servlet-name>
		<servlet-class>fr.ib.travel.LimaServlet</servlet-class>
		<init-param>
			<param-name>texte</param-name>
			<param-value>Pas de voyage actuellement Ã  Lima</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>lima</servlet-name>
		<url-pattern>/lima</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>santiago</servlet-name>
		<servlet-class>fr.ib.travel.SantiagoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>santiago</servlet-name>
		<url-pattern>/santiago</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>montevideo</servlet-name>
		<servlet-class>fr.ib.travel.MontevideoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>montevideo</servlet-name>
		<url-pattern>/montevideo</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>georgestown</servlet-name>
		<servlet-class>fr.ib.travel.GeorgeTownServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>georgestown</servlet-name>
		<url-pattern>/georgestown</url-pattern>
	</servlet-mapping>
	
	<resource-ref>
	<res-ref-name>jdbc/travelDS</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
	</resource-ref>

	<filter>
		<filter-name>SetCharacterEncoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>SetCharacterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/erreur404.html</location>
	</error-page>



</web-app>