<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
	xmlns:p="tapestry:parameter" t:type="layout" title="Viaje a China">

	<h1>Viaje a China</h1>
	<div class="row">
		<section class="col-xs-6">
			<t:form>
				<div class="form-group has-danger">
					<t:label for="name">Nombre</t:label>
					<t:textfield type="text" class="form-control form-control-danger"
						t:id="name" placeholder="Tu nombre" validate="required,minLength=3"></t:textfield>
				</div>
				<div class="form-group has-danger">
					<t:label for="tel">Teléfono</t:label>
					<t:textfield type="tel" class="form-control form-control-danger"
						t:id="tel" placeholder="Tu numero de teléfono"
						validate="required,minLength=10,maxLength=10,regexp=^[0-9]+$"></t:textfield>
				</div>
				<div class="form-group">
					<label for="pasaj">Pasajeros</label>
					<t:textfield type="number" class="form-control" t:id="pasaj"
						min="0" placeholder="Numero de viajantes"></t:textfield>
				</div>
				<div class="form-group">
					<t:label for="visa">Visa?</t:label>
					<t:upload class="form-control" t:id="visa">
					</t:upload>
				</div>
				<t:submit type="submit" class="btn btn-primary" value="Enviar" />
				<!-- affiche les erreurs produites par des exceptions dans java -->
				<t:errors />
			</t:form>
		</section>
	</div>

</html>