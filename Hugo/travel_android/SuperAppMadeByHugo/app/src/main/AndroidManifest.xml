<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="raynorraiders.supercoolappmadebyhugo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cool_icon"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="MapActivity"
            android:label="@string/app_lastname">
            // intent-filter définit une activité de démarrage

        </activity>
        <activity
            android:name="SubmapsActivity"
            android:label="@string/app_nickname"></activity>
        <activity
            android:name="PlaneActivity"
            android:icon="@drawable/galaxy_icon"
            android:label="@string/app_surname"></activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name">

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name="RegisterActivity"></activity>
    </application>

</manifest>
