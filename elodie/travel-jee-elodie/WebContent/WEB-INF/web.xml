<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<servlet>
		<servlet-name>Quito</servlet-name>
		<servlet-class>fr.ib.travel.QuitoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Quito</servlet-name>
		<url-pattern>/equateur/quito</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Cartagena</servlet-name>
		<servlet-class>fr.ib.travel.CartagenaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Cartagena</servlet-name>
		<url-pattern>/colombie/cartagena</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Maracaibo</servlet-name>
		<servlet-class>fr.ib.travel.Maracaibo</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Maracaibo</servlet-name>
		<url-pattern>/venezuela/maracaibo</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Lima</servlet-name>
		<servlet-class>fr.ib.travel.Lima</servlet-class>
		<init-param>
			<param-name>Text</param-name>
			<param-value>Pas de voyage actuellement. Nous sommes désolés!</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>

	</servlet>
	<servlet-mapping>
		<servlet-name>Lima</servlet-name>
		<url-pattern>/perou/lima</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>Santiago</servlet-name>
		<servlet-class>fr.ib.travel.SantiagoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Santiago</servlet-name>
		<url-pattern>/chili/santiago</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Montevideo</servlet-name>
		<servlet-class>fr.ib.travel.MontevideoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Montevideo</servlet-name>
		<url-pattern>/uruguay/montevideo</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>GeorgeTown</servlet-name>
		<servlet-class>fr.ib.travel.GeorgeTownServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GeorgeTown</servlet-name>
		<url-pattern>/guyana/georgeTown</url-pattern>
	</servlet-mapping>
	
	<resource-ref>
	<res-ref-name>jdbc/travelDS</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
	</resource-ref>

	<filter>
		<filter-name>SetCharacterEncoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>SetCharacterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/erreur404.html</location>
	</error-page>

</web-app>