<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter"
	t:type="layout" title="Iran">
	<img src="${context:img/iran.jpg}" alt="photo_asie" class="img-rounded img-responsive" />
	<h1>Iran</h1>
	<p>
		N'attendez pas:
		<span>${discount.name}</span>
		pour seulement
		<span>${discount.price}â‚¬</span>
		- Description:
		<span>${discount.description}</span>
	</p>
	<p>${travels.size()} voyages : </p>
	
	<t:beandisplay object="discount" reorder="name,description,price">
		<p:name>
			${discount.name.toUppercase()}
		</p:name>
		<p:description>
			${discount.description.substring(0,10)}...
		</p:description>
	</t:beandisplay>
	
	<table class="table table-striped table-bordered">
		<tr>
			<th>Index</th>
			<th>Nom</th>
			<th>Description</th>
			<th>Prix</th>
			<th>Prix en Rial</th>
		</tr>
	
	<t:loop source="travels" value="travel">
		<tr>
		<td>${compter}</td>
		<td>${travel.name}</td>
		<td>${travel.description}</td>
		<t:if test="comparaison">
			<td>${travel.price}!</td>
		</t:if>
		<t:if test="!comparaison">
			<td>${travel.price}</td>
		</t:if>
		<td>${rialPrice}</td>
	</tr>
	</t:loop>
	
	

</table>
</html>