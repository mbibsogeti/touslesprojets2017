<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/context		
			http://www.springframework.org/schema/context/spring-context-3.0.xsd
            http://www.springframework.org/schema/aop	
			http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">



<bean id="cruiseSource" class="fr.ib.spring.khady.CruiseSource"><property name="calculator" ref="cruiseCalculator"/></bean>

<bean id="cruiseCalculator" class="fr.ib.spring.khady.CruiseCalculator">
<property name="priceBM" value="340"/>
<property name="priceMH" value="220.90"/></bean> 

<bean id="timerAspect" class="fr.ib.spring.khady.TimerAspect"/>

 <aop:config>
 <aop:aspect ref="timerAspect">
 <aop:around method="showTime" pointcut="execution(* getPrice())"/>
 <aop:around method="showTime" pointcut="execution(* getActive())"/>
 </aop:aspect>
 </aop:config>
 
 
 <bean id="lakeSource" class="fr.ib.spring.khady.LakeSource" autowire="byType"/>
 <!--autowire="byType" permet l'accès au set de type Lake donc de bénéficier du repository(de la classe LakeRepository)  -->
 <context:component-scan base-package="fr.ib.spring.khady"/><!-- cette balise va chercher les élémts de l'annotation @EnableGemfireRepositories contenus dans le package -->
 
 
<!-- DEBUT CONFIG NECESSAIRE POUR CACHE GEMFIRE -->
 <bean class="org.springframework.data.gemfire.CacheFactoryBean" id="gemfireCache">
<property name="properties">
<props> <!-- correspond à java.util.Properties -->
<prop key="log-level">error</prop> 
<prop key="mcast-port">0</prop> <!-- permet d'exécuter plus vite le code -->
</props>
</property>            
</bean> 
<!-- FIN CONFIG NECESSAIRE POUR CACHE GEMFIRE --> 


<!-- DEBUT CONFIG SYSTEME DE STOCKAGE GEMFIRE --> 
 <bean id="lakeRegion" class="org.springframework.data.gemfire.LocalRegionFactoryBean" p:cache-ref="gemfireCache">
 <property name="name" value="lakeRegion"/>
 </bean>
 <!-- FIN CONFIG SYSTEME DE STOCKAGE GEMFIRE --> 
 
 
 
 
 
 
 
 
  
</beans>

