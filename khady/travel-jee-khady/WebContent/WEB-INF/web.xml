<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
        version="3.1">

    <servlet>
        <servlet-name>Quito</servlet-name><!-- choisi arbitrairement mais il est conseiller de choisir un nom qui ressemble Ã  celui de notre classe -->
        <servlet-class>fr.ib.travel.QuitoServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Quito</servlet-name>
        <url-pattern>/equateur/*</url-pattern><!-- choisi arbitrairement -->
    </servlet-mapping>


 <servlet>
        <servlet-name>Cartagena</servlet-name>
        <servlet-class>fr.ib.travel.CartagenaServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Cartagena</servlet-name>
        <url-pattern>/colombie/*</url-pattern>
 </servlet-mapping>
 
 <servlet>
        <servlet-name>Maracaibo</servlet-name>
        <servlet-class>fr.ib.travel.MaracaiboServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Maracaibo</servlet-name>
