 </servlet-mapping>
 
  <servlet>
        <servlet-name>Lima</servlet-name>
        <servlet-class>fr.ib.travel.LimaServlet</servlet-class>
        <init-param>
        <param-name>text</param-name>
        <param-value>Pas de voyages actuellement ! Tant pis pour vous !</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>       
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Lima</servlet-name>
        <url-pattern>/perou/*</url-pattern>
 </servlet-mapping>
  
</web-app>