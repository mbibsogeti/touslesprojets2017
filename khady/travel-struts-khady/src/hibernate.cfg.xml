<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory name="foo">
	    <property name="hibernate.hbm2ddl.auto">update</property>
		<property name="show_sql">true</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>	
        <property name="hibernate.connection.url">jdbc:mysql://localhost/travel</property>	
		<property name="hibernate.connection.username">root</property>	
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<mapping resource="org/hibernate/test/legacy/Simple.hbm.xml" class="fr.ib.travel.beans.Monument"/>	
		<mapping resource="org/hibernate/test/legacy/Simple.hbm.xml" class="fr.ib.travel.beans.Comment"/>	
	</session-factory>
</hibernate-configuration>